<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, class:"cabin" %><br>
    <%= f.text_field :name %>
  </div>
  <br>
  <div class="field">
    <%= f.label :date, class:"cabin" %><br>
    <%= f.text_field :date, id:"datepicker" %>
  </div>
  <br>
  <div class="field">
    <%= f.label :start_time, class:"cabin" %><br>
    <%= f.time_select :time, {ampm: true, minute_step: 15} %>
  </div>
  <br>
  <div class="field">
    <%= f.label :end_time, class:"cabin" %><br>
    <%= f.time_select :end_time, {ampm: true, minute_step: 15} %>
  </div>

  <%= f.hidden_field :dashboard_id, value: @dashboard.id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
