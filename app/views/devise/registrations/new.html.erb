<div class="devise_flexbox_container">
  <div class="user_form">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.text_field :name, autofocus: true, :placeholder => 'Name' %>
    </div><br/>

    <div class="field">
      <%= f.email_field :email, autofocus: true, :placeholder => 'Email' %>
    </div><br/>

    <div class="field_phone">
      <%= f.text_field :phone_number, :placeholder => 'Phone Number' %>
    </div>

<!-- <div class="field_checkbox">
    <%= f.label :moderator %><br />
    <%= f.check_box :moderator %>
  </div><br /> -->

    <div class="field">
      <% if @minimum_password_length %>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "off",  :placeholder => 'Password(8 characters minimum)' %>
    </div><br/>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off",  :placeholder => 'Password Confirmation' %>
    </div><br/>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
    <% end %>
  </div>
</div>
