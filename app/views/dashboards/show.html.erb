<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @dashboard.title %>
</p>


<div class ="calendar">
  <p>This space is reserved for linking to the calendar.</p>

</div>





<h3>Listing News Feeds</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Dashboard</th>
      <th>Dashboard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @news_feeds.each do |news_feed| %>
    <% if @dashboard.id == news_feed.dashboard_id %>
      <tr>
        <td><%= news_feed.title %></td>
        <td><%= news_feed.body %></td>
        <td><%= news_feed.dashboard_id %></td>
        <td><%= news_feed.dashboard %></td>
        <td><%= link_to 'Show', news_feed %></td>
          <td><%= link_to 'Edit', edit_news_feed_path(news_feed) %></td>
          <td><%= link_to 'Destroy', news_feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class ="news_feed">
  <%= link_to 'New Event', new_dashboard_news_feed_path(@dashboard.id) %>
  <br>
  <br>




<h3>Add a news item!</h3>
<%= form_for [@dashboard, @news_feed] do |f| %>
<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :body %><br>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>



<div class="uploads_list">


<div class="row">
          <% @uploads.each do |upload| %>

          <% if @dashboard.id == upload.dashboard_id %>

            <div class="col-md-4 portfolio-item">

                <%= image_tag ("document.png") %>
                <h3 class ="index_center"><%= link_to upload.name, upload.url%></h3>
            </div>
            <% end %>

          <% end %>

        </div>
</div>

  <hr>






<div class ="upload">
  <p>This space is reserved for linking to uploads.</p>
  <%= form_tag dashboard_path, enctype: 'multipart/form-data' do %>
      <%= file_field_tag :file  %>
      <%= hidden_field_tag 'dashboard_id', @dashboard.id  %>
      <%= submit_tag 'Upload file' %>

  <% end %>


</div>




<%= link_to 'Edit', edit_dashboard_path(@dashboard) %> |
<%= link_to 'Back', dashboards_path %>
