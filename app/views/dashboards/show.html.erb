<!-- XXXXXXXXXX - Calendar Section XXXXXXXXXXXXX -->
<div id="main">
  <article>
    <p>This space is reserved for linking to the calendar.</p>
  </article>
<!-- XXXXXXXXXX - News Feed Dashboard Section XXXXXXXXXXXXX -->
  <aside>
    <h3>Listing News Feeds</h3>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @dashboard.news_feeds.each do |news_feed| %>
          <tr>
            <td><%= news_feed.title %></td>
            <td><%= news_feed.body %></td>
            <td><%= link_to 'Show', news_feed %></td>
            <td><%= link_to 'Edit', edit_news_feed_path(news_feed) %></td>
            <td><%= link_to 'Destroy', news_feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <!-- Subsection - News Feed Dashboard Subs -->
    <div ="news_feed" class>
      <%= link_to 'New Event', new_dashboard_news_feed_path(@dashboard.id) %>
    </aside>

  </div>

  <div id="dashboard_bottom_row">
          <div class="chat">
            <p>This is the chat feature</p>
          </div>

          <div class="docs">
            <%= image_tag ("document-square.png") %>
            <p>Documents</p>
            <%= link_to 'New Document', uploads_new_path %>
        </div>
  </div>

