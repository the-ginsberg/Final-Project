<div class="dashboard_name"><h3><%= @dashboard.title %></h3></div>

<!-- XXXXXXXXXX - Calendar Section XXXXXXXXXXXXX -->
<div id="main">

  <article>
    <%= link_to 'New Event', new_dashboard_event_path(@dashboard.id), class: "center_new_event" %>

    <div>
      <div class="calendar_title">
        <div class="well controls">
          <%= link_to calendar_path(date: @date - 1.month), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-backward"></i>
          <% end %>
          <%= "#{@date.strftime("%B")} #{@date.year}" %>
          <%= link_to calendar_path(date: @date + 1.month), class: "btn btn-default" do %>
            <i class="glyphicon glyphicon-forward"></i>
          <% end %>
        </div>
      </div>
    </div>

    <div>
      <div>
        <%= calendar @date do |date| %>
          <%= date.day %>
          <% if @events_by_date[date] %>
            <ul>
              <% @events_by_date[date].each do |event| %>
                <li><%= link_to event.name.truncate(6), event %></li>
              <% end %>
            </ul>
          <% end %>
        <% end %>
      </div>
    </div>

  </article>
<!-- XXXXXXXXXX - News Feed Dashboard Section XXXXXXXXXXXXX -->





<aside>
  <div class="main_child">
    <h3>Latest Announcements</h3>
        <% if @last_three != nil %>
          <% @last_three.each do |news_feed| %>
            <div class="each_news_event">
                <strong><%= link_to news_feed.title, news_feed %> </strong>
                <br>
                <br>
                <%= news_feed.body.truncate(60) %>
                <br>

              <%= link_to 'Show', news_feed %>
              <%= link_to 'Edit', edit_news_feed_path(news_feed) %>
              <%= link_to 'Destroy', news_feed, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
            <br>
          <% end %>
        <% end %>
        <%= link_to 'New Announcement', new_dashboard_news_feed_path(@dashboard.id) %>
  </div>
  </aside>

</div>







  <div id="dashboard_bottom_row">
      <div class="chat">
        <div id="tlkio" data-channel="Dashboard" style="width:800px;height:250px;"></div><script async src="http://tlk.io/embed.js" type="text/javascript"></script>
      </div>

    <div class="docs">
      <div class="docs_child">
        <%= image_tag ("document-square.png") %>
        <p>Documents</p>
        <%= link_to 'New Document', uploads_new_path %>
      </div>
    </div>
  </div>

